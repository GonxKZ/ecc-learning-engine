{
  "name": "@ecscope/web",
  "version": "1.0.0",
  "description": "ECScope WebAssembly Engine - Professional-grade WebAssembly integration for modern web browsers",
  "main": "ecscope.js",
  "types": "ecscope.d.ts",
  "files": [
    "ecscope.js",
    "ecscope.wasm",
    "ecscope.d.ts",
    "ecscope.min.js",
    "ecscope.min.wasm",
    "README.md"
  ],
  "keywords": [
    "webassembly",
    "wasm",
    "ecs",
    "game-engine",
    "graphics",
    "audio",
    "physics",
    "typescript",
    "emscripten",
    "browser",
    "performance",
    "simd",
    "threading"
  ],
  "author": "ECScope Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ecscope/ecscope.git",
    "directory": "web"
  },
  "homepage": "https://ecscope.dev",
  "bugs": {
    "url": "https://github.com/ecscope/ecscope/issues"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "browser": {
    "fs": false,
    "path": false,
    "os": false
  },
  "scripts": {
    "build": "npm run build:debug && npm run build:release",
    "build:debug": "emcmake cmake -B build/debug -DECSCOPE_WEB_DEBUG=ON && cmake --build build/debug",
    "build:release": "emcmake cmake -B build/release -DECSCOPE_WEB_DEBUG=OFF && cmake --build build/release",
    "serve": "python3 -m http.server 8080",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "echo 'Unit tests would run here'",
    "test:integration": "echo 'Integration tests would run here'",
    "lint": "eslint src/ --ext .js,.ts",
    "format": "prettier --write src/",
    "clean": "rm -rf build/ dist/*.js dist/*.wasm",
    "analyze": "emrun --browser firefox --port 8080 build/release/ecscope-web.html",
    "profile": "node scripts/profile.js",
    "benchmark": "node scripts/benchmark.js",
    "docs": "typedoc --out docs/ ecscope.d.ts"
  },
  "devDependencies": {
    "@types/emscripten": "^1.39.6",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "prettier": "^2.7.0",
    "typedoc": "^0.23.0",
    "typescript": "^4.8.0"
  },
  "peerDependencies": {
    "typescript": ">=4.0.0"
  },
  "optionalDependencies": {
    "@webassembly/wast": "^1.11.0"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 Edge versions"
  ],
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/ecscope"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}